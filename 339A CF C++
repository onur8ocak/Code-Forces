#include <bits/stdc++.h>
#include <vector>
#include <algorithm>
using namespace std;
#define MOD 1e9+7
#define INF -1
typedef float flo;
typedef long long ll;
int main() {
	string s; cin>>s;
	for(ll i=0;i<s.size();i+=2)
	    for(ll j=0;j<s.size();j+=2)
	        if(s[i]<s[j]) swap(s[i],s[j]); cout<<s;}

#include <bits/stdc++.h>
#include <vector>
#define assign as
typedef long long ll;
typedef int i;
using namespace std;
vector<i> p;
vector<i> q;
ll a=0,n,j,t1,t2;
int main(){
    cin>>n;
    for(j=0;j<n;j++)
    {
        cin>>t1>>t2;
        p.push_back(t1); q.push_back(t2);
        if(p[j]+2<=q[j])
        a++;
    }
    cout<<a;
    return 0;
}

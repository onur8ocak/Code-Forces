// Online C compiler to run C program online
#include <stdio.h>

int main() {
    int i,n,arr[101],max,sum=0;
    scanf("%d",&n);
    for(i=0;i<n;i++)
    scanf("%d",&arr[i]);
    max=arr[0];
    for(i=1;i<n;i++)
    {
        if(arr[i]>max)
        max=arr[i];
    }
    for(i=0;i<n;i++)
    sum+=max-arr[i];
    printf("%d",sum);
    return 0;
}

// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
int b,sy=1;
 
int main() {
    string s1,s2;
    int i;
    cin>>s1;
    cin>>s2;
    int n=s1.size();
    for(i=0;i<n;i++)
    {
        if(s1[i]==s2[n-i-1])
        continue;
        else
        {
            cout<<"NO"; return 0;
        }
    }
    cout<<"YES";
    return 0;

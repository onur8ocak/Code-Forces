#include <bits/stdc++.h>
using namespace std;
int main() {
    int t,n,arr[55],mn,mx;
    cin>>t;
    while(t--)
    {
        cin>>n;
        for(int i=0;i<n;i++)
        cin>>arr[i];
        mn=arr[0];
        mx=arr[0];
        for(int i=1;i<n;i++)
        {
            mn=min(arr[i],mn);
            mx=max(arr[i],mx);
        }
        cout<<mx-mn<<endl;
    }
    
    return 0;
}
